# ============================================================
# LawMate Backend — Environment Variables
# Copy to .env and fill in values
# NEVER commit .env to git
# ============================================================


# ── Database ─────────────────────────────────────────────────
DATABASE_URL=postgresql://user:password@localhost:5432/lawmate


# ── JWT Auth ─────────────────────────────────────────────────
SECRET_KEY=                        # openssl rand -hex 32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440   # 24 hours


# ── AWS (shared by all AWS services) ─────────────────────────
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1


# ── AWS Bedrock — Agent LLM ───────────────────────────────────
BEDROCK_MODEL_ID=anthropic.claude-sonnet-4-5


# ── AWS Bedrock — Judgments Knowledge Base ────────────────────
BEDROCK_KNOWLEDGE_BASE_ID=         # KB ID for Kerala HC judgments
BEDROCK_KB_DATA_SOURCE_ID=         # data source ID within judgments KB
JUDGMENT_KB_S3_BUCKET=lawmate-judgments-kb


# ── AWS Bedrock — Legal Resources Knowledge Base ─────────────
BEDROCK_RESOURCES_KB_ID=           # KB ID for legal resources (separate from judgments)
BEDROCK_RESOURCES_KB_DS_ID=        # data source ID within resources KB
RESOURCES_KB_S3_BUCKET=lawmate-resources-kb


# ── AWS S3 — Case Documents ───────────────────────────────────
S3_BUCKET=lawmate-case-pdfs


# ── IndianKanoon API ──────────────────────────────────────────
# Sign up at: https://api.indiankanoon.org
# Cost: ₹0.50/search, ₹0.50/document fetch
INDIANKANOON_API_TOKEN=


# ── Google Calendar OAuth ─────────────────────────────────────
# Create credentials at: https://console.cloud.google.com
# OAuth 2.0 Client ID — Web application type
# Authorised redirect URI must match GOOGLE_REDIRECT_URI exactly
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/v1/calendar/google/callback

# Fernet key for encrypting OAuth refresh tokens at rest
# Generate once: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# Store securely — losing this key means all connected Google accounts need to reconnect
CALENDAR_ENCRYPTION_KEY=


# ── Kerala HC Scraping ────────────────────────────────────────
# No token needed — public site
# Scraped: hckinfo.keralacourts.in/digicourt/Casedetailssearch/Advocatesearch
# Scraped: hckreala.nic.in (roster PDFs)
# Scraped: eCourts portal (case status)


# ── App Settings ──────────────────────────────────────────────
ENVIRONMENT=development            # development | production
DEBUG=true
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
LOG_LEVEL=INFO


# ── Frontend (Next.js — separate .env.local) ──────────────────
# FASTAPI_INTERNAL_URL=http://localhost:8000
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
