{
  "name": "lawmate-extension",
  "version": "1.1.0",
  "description": "Chrome extension for Lawmate - Kerala High Court case management",
  "main": "src/background/background.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "icons": "node scripts/generate-icons.js",
    "dev": "webpack --mode development --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write 'src/**/*.{js,json,css,html}'",
    "format:check": "prettier --check 'src/**/*.{js,json,css,html}'",
    "clean": "rimraf dist",
    "zip": "node scripts/package.js",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "lawmate",
    "kerala-high-court",
    "legal-tech",
    "case-management",
    "chrome-extension"
  ],
  "author": "Lawmate Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lawmate/lawmate-extension.git"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "archiver": "^6.0.1",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "sharp": "^0.34.5",
    "style-loader": "^3.3.4",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
